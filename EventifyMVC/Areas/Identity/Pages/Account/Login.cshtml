@page
@model LoginModel

@{
    ViewData["Title"] = "Log in";
}
<h1>@ViewData["Title"]</h1>

<div class="row absolute top-0 bottom-0 left-0 right-0 bg-white">
    <div class="col-6 container-full-height d-flex align-items-center justify-content-center">
    <img src="@Url.Content("~/images/eventifyLogo.png")" class=" w-40 absolute top-20 left-40">
            <section class="w-1/2">
                <h1 class="text-5xl mb-5 text-center  font-bold">Log in</h1>
                <form id="account" method="post">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-floating my-2">
                        <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" />
                        <label asp-for="Input.Email" class="form-label"></label>
                        <span asp-validation-for="Input.Email" class="text-danger"></span>
                    </div>
                <div class="form-floating my-2">
                        <input asp-for="Input.Password" class="form-control" autocomplete="current-password" aria-required="true" />
                        <label asp-for="Input.Password" class="form-label"></label>
                        <span asp-validation-for="Input.Password" class="text-danger"></span>
                    </div>
                    <div>
                        <div class="checkbox">
                            <label asp-for="Input.RememberMe" class="form-label">
                                <input class="form-check-input" asp-for="Input.RememberMe" />
                                @Html.DisplayNameFor(m => m.Input.RememberMe)
                            </label>
                        </div>
                    </div>
                    <div>
                    <button id="login-submit" type="submit" class="w-100 btn btn-lg text-white font-medium" style="background-color: #FF6600">Log in</button>
                    </div>
                </form>
            </section>
    </div>
    <div class="col-6">
        <img src="@Url.Content("~/images/loginImage.jpg")" class="h-screen w-full object-cover" >
    </div>
</div>



@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
