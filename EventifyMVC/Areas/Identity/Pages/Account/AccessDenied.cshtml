@page
@model AccessDeniedModel
@{
    ViewData["Title"] = "Access denied";
}

<header>
    <img src="@Url.Content("~/images/accessDenied.png")" alt="Logo" class="w-50 mx-auto d-block mt-3">
    <button onclick="goBack()" class="btn text-white font-medium px-5 py-2 mx-auto block" style="background-color: #F05537">
        <i class="bi bi-arrow-left"></i> Go Back
    </button>
</header>

@section scripts
    {
    <script>
        function goBack() {
            window.history.back();
        }
    </script>
}