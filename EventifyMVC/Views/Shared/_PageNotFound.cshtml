<div class="text-center">
    <img src="@Url.Content("~/images/notFound.jpg")" alt="Page Not Found" class="w-1/3 mt-10 block mx-auto" />
    <h1 class="text-2xl font-semibold -mt-10">Sorry, the page you requested was not found.</h1>
    <button onclick="goBack()" class="btn text-white font-medium px-5 py-2 mt-3" style="background-color: #FF6600">
        <i class="bi bi-arrow-left"></i> Go Back
    </button>
</div>

@section scripts
    {
    <script>
        function goBack() {
            window.history.back();
        }
    </script>
}